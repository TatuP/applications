data = plt.loadtxt(pressurePath + "/p.dat")
#phi = [sqrt(data[i,2]*data[i,2] + data[i,3]*data[) for i in range(0,len(data[:,2]))]
pipeStartPlot = plt.plot( 1000*data[:,0], 1e-5*data[:,1], 'ro', label="Nozzle exit pressure" )
